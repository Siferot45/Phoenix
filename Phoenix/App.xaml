<Application x:Class="Phoenix.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Phoenix" 
             xmlns:vm="clr-namespace:Phoenix.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MainMenu.xaml"/>
                <ResourceDictionary Source="Templates/ModelMainView.xaml"/>
            </ResourceDictionary.MergedDictionaries> 
            
            <vm:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
